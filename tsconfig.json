{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["@types/node"],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
