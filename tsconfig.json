{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declaration": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
